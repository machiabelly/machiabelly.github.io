{
    "compilerOptions": {
        "lib": [
            "ESNext",
            "dom"
        ],
        "target": "ES6",
        "noImplicitAny": true,
        "module": "es2020",
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./public/build",
        "declarationDir": "./public/build",
        /* Module Resolution Options */
        "moduleResolution": "node"
        /* Specify module resolution strategy: 'node' (Node.js) or 'classic' (TypeScript pre-1.6). */
    }
}
